{erl_opts, [debug_info, {parse_transform, lager_transform}]}.

{deps, [
    {lager, ".*", {git, "https://github.com/erlang-lager/lager.git", {tag, "3.3.0"}}},
    {yamerl, ".*", {git, "https://github.com/yakaz/yamerl.git", {tag, "v0.4.0"}}},
    {elli, ".*", {git, "https://github.com/knutin/elli.git", {tag, "v1.0.5"}}},
    {jiffy, ".*", {git, "https://github.com/davisp/jiffy.git", {tag, "0.14.11"}}}
]}.

{cover_enabled, true}.

{relx,
    [{release, {statser, "1.0.0"}, [statser]},
    {vm_args, "config/vm.args"},
    {sys_config, "config/sys.config"},
    {include_erts, true},
    {excl_sys_filters, ["^bin/.*"]},
    {overlay, [{copy, "assets", "assets"},
               {copy, "bin/statser", "bin/statser"}
               ]}
    ]}.

{profiles, [
            {production, [{relx, [{include_src, false}]}]},
            {docker, [{relx, [{overlay, [{copy, "assets", "assets"},
                                         {copy, "bin/statser", "bin/statser"},
                                         {copy, "statser.yaml.docker", "statser.yaml"}]},
                              {include_src, false}]}]},
            {lint, [{plugins, [{rebar3_lint, {git, "https://github.com/project-fifo/rebar3_lint.git", {tag, "v0.1.9"}}}]}]}
           ]}.

{elvis,
 [#{dirs => ["src"],
    filter => "*.erl",
    ignore => [carbon, statser_parser],
    rules => [
              {elvis_style, line_length,
               #{ignore => [],
                 limit => 120,
                 skip_comments => false}},
              {elvis_style, no_tabs},
              {elvis_style, no_trailing_whitespace},
              {elvis_style, macro_names, #{ignore => []}},
              {elvis_style, macro_module_names},
              {elvis_style, operator_spaces, #{rules => [{right, ","},
                                                         {right, "++"},
                                                         {left, "++"}]}},
              {elvis_style, nesting_level, #{level => 3}},
              {elvis_style, god_modules,
               #{limit => 25,
                 ignore => []}},
              {elvis_style, invalid_dynamic_call,
               #{ignore => []}},
              {elvis_style, used_ignored_variable},
              {elvis_style, no_behavior_info},
              {
               elvis_style,
               module_naming_convention,
               #{regex => "^[a-z]([a-z0-9]*_?)*(_SUITE)?$",
                 ignore => []}
              },
              {
               elvis_style,
               function_naming_convention,
               #{regex => "^([a-z][a-z0-9]*_?)*$"}
              },
              {elvis_style, state_record_and_type},
              {elvis_style, no_spec_with_records},
              {elvis_style, dont_repeat_yourself, #{min_complexity => 10}},
              {elvis_style, no_debug_call, #{ignore => []}}
             ]
   },
  #{dirs => ["."],
    filter => "rebar.config",
    rules => [{elvis_project, no_deps_master_rebar, #{ignore => []}},
              {elvis_project, protocol_for_deps_rebar, #{ignore => []}}]
   }
 ]
}.
